<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.d3ifcool.jagosholat">

    <!-- === Permission Kiblat Dari Bryan === -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- =================================== -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_jago_sholat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_jago_sholat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.TentangKamiActivity"
            android:label="Tentang Kami"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <provider
            android:name=".models.databases.DataProvider"
            android:authorities="org.d3ifcool.jagosholat"
            android:exported="false" />

        <activity android:name=".views.activities.DetailActivity">

        </activity>
    </application>

</manifest>