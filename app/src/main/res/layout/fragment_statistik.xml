<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.MainContent.StatistikFragment"
        android:padding="10dp"
        android:background="@color/background_app">

        <!--<com.github.mikephil.charting.charts.LineChart-->
            <!--android:id="@+id/stat_chart"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dp"/>-->

        <android.support.v7.widget.CardView
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/Judul_statistik"
            android:minHeight="60dp">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Statistik Shalat Hari Ini"
                android:textSize="20dp"
                android:background="@color/Judul_statistik"
                android:textColor="@color/textColorWhite" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingHorizontal="@dimen/dimen_primary"
                android:paddingVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/stat_progressBar"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_below="@id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:progress="50"/>
                <TextView
                    android:id="@+id/txt_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    tools:text="20%"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:scrollbars="none"
                android:id="@+id/ListData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/content_statistik_hari_ini"/>
            <!-- Empty View -->
            <RelativeLayout
                android:id="@+id/empty_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <include layout="@layout/content_statistik_empty"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
