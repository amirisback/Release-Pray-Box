<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:elevation="@dimen/dimen_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingHorizontal="@dimen/dimen_primary"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tatacara_dot_active"/>

        <LinearLayout
            android:layout_marginHorizontal="@dimen/dimen_primary"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@id/textview_harian_shalat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textSize="18dp"
                android:layout_gravity="bottom"
                tools:text="@string/statistik_shalat"
                android:textStyle="bold"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="0dp">

                <ImageView
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_statistik_jam"/>

                <TextView
                    android:id="@id/textview_harian_waktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    tools:text="@string/statistik_waktu" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@id/imageview_harian_shalat"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>