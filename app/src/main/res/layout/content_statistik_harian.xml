<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_big_16dp"
    android:layout_marginEnd="@dimen/dimen_big_16dp"
    android:layout_marginBottom="@dimen/dimen_medium_8dp"
    android:background="@drawable/background_card"
    android:elevation="@dimen/dimen_elevation_2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingStart="@dimen/dimen_big_16dp"
    android:paddingTop="@dimen/dimen_medium_8dp"
    android:paddingEnd="@dimen/dimen_big_16dp"
    android:paddingBottom="@dimen/dimen_medium_8dp">

    <TextView
        android:id="@+id/textview_harian_shalat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/text_size_medium_16sp"
        android:textStyle="bold"
        tools:text="@string/statistik_shalat" />

    <TextView
        android:id="@+id/textview_harian_waktu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_harian_shalat"
        android:drawableStart="@drawable/ic_statistik_jam"
        android:drawablePadding="@dimen/dimen_medium_8dp"
        tools:text="@string/statistik_waktu" />

    <ImageView
        android:id="@+id/imageview_harian_shalat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />

</RelativeLayout>